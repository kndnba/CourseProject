<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_characters">

    <fragment
        android:id="@+id/navigation_characters"
        android:name="com.bignerdranch.android.courseproject.ui.characters.CharacterFragment"
        android:label="@string/title_characters"
        tools:layout="@layout/fragment_character">
        <action
            android:id="@+id/action_charactersFragment_to_characterDetailFragment"
            app:destination="@id/characterDetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/characterDetailFragment"
        android:name="com.bignerdranch.android.courseproject.ui.characterdetail.CharacterDetailFragment"
        android:label="Character Detail"
        tools:layout="@layout/fragment_character_detail" />

    <fragment
        android:id="@+id/navigation_locations"
        android:name="com.bignerdranch.android.courseproject.ui.locations.LocationsFragment"
        android:label="@string/title_locations"
        tools:layout="@layout/fragment_locations">
        <action
            android:id="@+id/action_navigation_locations_to_locationsDetailFragment"
            app:destination="@id/locationsDetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/locationsDetailFragment"
        android:name="com.bignerdranch.android.courseproject.ui.locationsdetail.LocationsDetailFragment"
        android:label="Locations Detail"
        tools:layout="@layout/fragment_locations_detail" />

    <fragment
        android:id="@+id/navigation_episodes"
        android:name="com.bignerdranch.android.courseproject.ui.episodes.EpisodesFragment"
        android:label="@string/title_episodes"
        tools:layout="@layout/fragment_episodes"
        >
        <action
            android:id="@+id/action_navigation_episodes_to_episodesDetailFragment"
            app:destination="@id/episodesDetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/episodesDetailFragment"
        android:name="com.bignerdranch.android.courseproject.ui.episodesdetail.EpisodesDetailFragment"
        android:label="Episodes Detail"
        tools:layout="@layout/fragment_episodes_detail" />
</navigation>